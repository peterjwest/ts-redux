{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "dom", "dom.iterable"],
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "noErrorTruncation": true
  }
}
